<h1>新しい投稿フォーム</h1>

<%# コメントアウト1行のコメントアウト　%>
<!-- viewヘルパを使わない場合:開発者ツールで見える -->
<form action="">
    <input type="text">
</form>

<%= form_with model: @posts, html: {class: "form-container"} do |form| %>
<div class="form-input">
  <div><%= form.label :title %> <%= form.text_field :title %></div>
</div>
<div class="form-input">
  <div><%= form.label :content %> <%= form.text_area :content %></div>
</div>
<!-- <div><%= form.submit %>この場合はsaveと表示された</div> -->
<!-- <div><%= form.submit %>ああああ</div>これはHTMLの書き方 -->
<div class="button-container"></div>
  <div><%= form.submit "投稿する", class: "link-button" %>
</div>
<% end %> 
